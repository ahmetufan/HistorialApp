<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchWar"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_search2"
            android:hint="Arama"
            android:padding="5dp"
            android:textSize="12sp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bevan"
            android:text="TARİHİ KİŞİLİKLER"
            android:textColor="@color/buzMavisi"
            android:textSize="21sp"
            android:textStyle="bold"></TextView>

    </LinearLayout>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_war"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            ></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</ScrollView>